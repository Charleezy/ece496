@{
    ViewBag.Title = "Register";
}

<link href="~/Content/css/bootstrap.css" rel="stylesheet">
<script src="~/Scripts/bootstrap.js"></script>

<div class="container">
    <form class="form-horizontal col-lg-8 col-lg-offset-2" role="form">
        <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-3">
                <input type="text" class="form-control" id="firstName" placeholder="First">
            </div>
            <div class="col-lg-3">
                <input type="text" class="form-control" id="lastName" placeholder="Last" />
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-6">
                <input type="email" class="form-control" id="inputEmail">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-6">
                <input type="password" class="form-control" id="inputPassword">
            </div>
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="col-lg-2 control-label">Confirm Password</label>
            <div class="col-lg-6">
                <input type="password" class="form-control" id="confirmPassword" placeholder="Re-type password">
            </div>
        </div>
        <div class="form-group">
            <label for="inputSchool" class="col-lg-2 control-label">School</label>
            <div class="col-lg-6">
                 <input type="text" class="form-control" id="inputSchool">
            </div>
        </div>
        <div class="form-group">
            <label for="inputProgram" class="col-lg-2 control-label">Program</label>
            <div class="col-lg-6">
                 <input type="text" class="form-control" id="inputProgram">
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-default">Create Account</button>
                <a class="btn btn-default" role="button" onclick="location.href='@Url.Action("Index", "Home")'">Cancel</a>
            </div>
        </div>
    </form>
</div>
