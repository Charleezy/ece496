@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/css/bootstrap.css" rel="stylesheet">
<script src="~/Scripts/bootstrap.js"></script>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>
        </div>
      </div>
    </div>

    <div class="jumbotron">
      <div class="container">
        
        <h2>Welcome to PROJECTNAME, an all in one suite that allows you to effortlessly manage your teams, assignments, and time.</h2>
        <br />
        <p>Don't have an account?</p>
        <p><a class="btn btn-primary btn-lg" role="button" onclick="location.href='@Url.Action("Register", "Home")'">Register</a></p>
    
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-4" align="center">
          <h2>Manage your teams</h2>
          <img src="~/Content/img/user_group.png" class="img-rounded">
          <p>Keep in touch with all your team members, all in one location.</p>
        </div>
        <div class="col-md-4" align="center">
          <h2>Track your tasks</h2>
          <img src="~/Content/img/tasks.png" class="img-rounded">
          <p>Keep track of your responsibilities for all of your team projects. Easily manage what each team member is working on, what stage it is in, and when it will be done.</p>
       </div>
        <div class="col-md-4" align="center">
          <h2>Stay organized</h2>
          <img src="~/Content/img/date.png" class="img-rounded">
          <p>This all in one calendar keeps track of when you have classes, tutorials, and tests. It is also seamlessly integrated with your task manager to remind you of internal deadlines.</p>
        </div>
      </div>

      <hr>

      <footer>
        
      </footer>
    </div>